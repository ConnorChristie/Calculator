<Page
    x:Class="Calculator.Graph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:Name="GraphCanvas" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,0">
            <Canvas.RenderTransform>
                <CompositeTransform Rotation="180"/>
            </Canvas.RenderTransform>
        </Canvas>
        <TextBox x:Name="Debug" Canvas.Left="114" TextWrapping="Wrap" Margin="1092,10,10,722"/>
        <Button x:Name="Back_Button" Content="Back" Margin="10,10,0,707" Height="51" Width="88" FontSize="24" Click="Back_Button_Click"/>
    </Grid>
</Page>